<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Cobas 2012 - Sistema de gestión de escritos y notificaciones" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>
  <body>

    <!-- Header Wrapper -->
    <div id="mws-header" class="clearfix">
    
      <!-- Logo Wrapper -->
      <div id="mws-logo-container">
        <div id="mws-logo-wrap">
          <%= link_to image_tag("mws-logo.png"), root_path %>
        </div>
      </div>
        
      <!-- User Area Wrapper -->
      <div id="mws-user-tools" class="clearfix">                 
        <!-- User Functions -->
        <div id="mws-user-info" class="mws-inset">
          <div id="mws-user-photo">
            <%= image_tag "profile.jpg" %>
          </div>
          <div id="mws-user-functions">
            <div id="mws-username">
              Bienvenido, <%= current_user.email %>
            </div>
            <ul>
              <li><%= link_to "Cambiar contraseña", edit_user_registration_path %></li>
              <li><%= link_to "Cerrar sesión", destroy_user_session_path, :method => :delete %></a></li>
            </ul>
          </div>
        </div>
        <!-- End User Functions -->            
      </div>
      <!-- End User Area Wrapper -->

    </div>
    
    <!-- Main Wrapper -->
    <div id="mws-wrapper">
      <!-- Necessary markup, do not remove -->
      <div id="mws-sidebar-stitch"></div>
      <div id="mws-sidebar-bg"></div>
        
      <!-- Sidebar Wrapper -->
      <div id="mws-sidebar">
          
        <!-- Main Navigation -->
        <div id="mws-navigation">
          <ul>
            <li><%= link_to 'Escritos', registers_path, :class => "mws-i-24 i-file-cabinet" %></li>
            <li><%= link_to 'Notificaciones', notifications_path, :class => "mws-i-24 i-day-calendar" %></li>
            <% if current_user.admin? %>
              <li>
                <%= link_to 'Usuarios', userlists_index_path, :class => "mws-i-24 i-file-cabinet" %>
              </li>
            <% end %>
          </ul>
        </div>
        <!-- End Navigation -->
            
      </div>
        
        <!-- Container Wrapper -->
        <div id="mws-container" class="clearfix">
        
          <!-- Main Container -->
          <div class="container">
            <div class="grid_8">
              <% if notice %><div id="notice"><%= notice %></div><% end %>
              <% if alert %><div id="error"><%= alert %></div><% end %>
            </div>           

            <%= yield %>
          </div>
          <!-- End Main Container -->
            
          <!-- Footer -->
          <div id="mws-footer">
            Cobas Ingenio 2012. Todos los derechos reservados. Diseño y programación de Roberto Marco
          </div>
          <!-- End Footer -->
            
        </div>
        <!-- End Container Wrapper -->
        
    </div>
    <!-- End Main Wrapper -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
