<div class="mws-panel grid_8">
	<div class="mws-panel-header">
		<span class="mws-i-24 i-single-document">Editar escrito</span>
	</div>

	<div class="mws-panel-body">
		<%= render 'form' %>
	</div>

</div>
<div class="mws-report-container clearfix">
	<%= link_to 'Nuevo Escrito', new_register_path, :class => "mws-report-2 mws-button red medium" %>

	<%= link_to 'Ir Atras', registers_path, :class => "mws-report-2 mws-button red medium" %>	

	<%= link_to 'Ver Escrito', @register, :class => "mws-report-2 mws-button red medium" %>

	<%= link_to 'Eliminar', @register, :method => :delete, :confirm => "¿Estás seguro?", :class => "mws-report-2 mws-button gray medium" %>
</div>